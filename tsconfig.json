{
  "compilerOptions": {
    "target": "es5",
    "outDir":"./build",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "."
  },
  "include": [
    "src",
    "./setupTests.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ],
}
